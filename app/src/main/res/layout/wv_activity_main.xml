<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wv_main_dl_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.afirez.wevideo.home.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/common_include_app_bar" />

        <FrameLayout
            android:id="@+id/wv_main_fl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/wv_main_nv_navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/wv_main_navigation_header_layout"
        app:menu="@menu/wv_main_navigation_menu" />
</android.support.v4.widget.DrawerLayout>
