<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.afirez.wevideo">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:name=".MainApp"
        android:allowBackup="true"
        android:icon="@drawable/wv_common_ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/wv_common_ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GuideActivity" />
        <activity android:name=".home.MainActivity" />
        <activity android:name=".Live.LiveActivity" />
        <activity android:name=".favorite.FavoriteActivity" />
        <activity android:name=".history.HistoryActivity" />
        <activity android:name=".channel.ChannelDetailsActivity"/>
        <activity android:name=".channel.AlbumDetailActivity" />
        <activity android:name=".player.VideoPlayerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="landscape"/>
    </application>

</manifest>